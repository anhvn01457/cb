%html.no-js
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %title= full_title(yield(:title))
    %meta{:content => full_description(yield(:description)), :name => "description"}
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1", :name => "viewport", "user-scalable" => "no"}
    / %link{:href => "http://fonts.googleapis.com/css?family=Bitter:700", :rel => "stylesheet", :type => "text/css"}/
    = stylesheet_link_tag "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags 
  %body
    /[if lt IE 7] <p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgradae to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p>
    /[if IE 6]
      = stylesheet_link_tag "ie6", media: "all"
    #container
      = render 'layouts/header'
      .loader
        .spinner
          .bar1
          .bar2
          .bar3
          .bar4
          .bar5
          .bar6
          .bar7
          .bar8
          .bar9
          .bar10
          .bar11
          .bar12
      #content
        = yield
      = render 'layouts/footer'

